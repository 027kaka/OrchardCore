@{
    string mediaPath = Model.Fallback;
    if (Model.Image.Paths == null && Model.Image.Paths.Length > 0)
    {
        mediaPath = @Orchard.AssetUrl((string)Model.Image.Paths?[0]?.ToString());
    }
}

<zone name="Header">
    <header class="masthead" style="background-image: url('@mediaPath')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1><slot name="Header-Title"></slot></h1>
                        <slot name="Header-Subheading"></slot>
                        <slot name="Header-Meta"></slot>
                    </div>
                </div>
            </div>
        </div>
    </header>
</zone>
