@using OrchardCore.Forms.ViewModels;
@model FormPartEditViewModel

<fieldset class="form-group">
    <label asp-for="Action">@T["Action"]</label>
    <input type="text" asp-for="Action" class="form-control content-preview-text"></input>
    <span class="hint">@T["The URL to submit the form to."]</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="Method">@T["Method"]</label>
    <select asp-for="Method" class="form-control content-preview-select">
        <option value="POST">POST</option>
        <option value="GET">GET</option>
    </select>
    <span class="hint">@T["The HTTP method to use when submitting the form."]</span>
</fieldset>

<fieldset class="form-group">
    <label asp-for="WorkflowTypeId">@T["Workflow Type"]</label>
    <select asp-for="WorkflowTypeId" asp-items="Model.AvailableWorkflowTypes" class="form-control"></select>
    <span class="hint">@T["Optionally select a workflow to invoke when the form is submitted."]</span>
</fieldset>