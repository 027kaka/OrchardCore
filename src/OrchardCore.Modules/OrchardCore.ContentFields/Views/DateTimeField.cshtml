@model OrchardCore.ContentFields.ViewModels.DisplayDateTimeFieldViewModel
@using OrchardCore.Mvc.Utilities
@using OrchardCore.ContentManagement.Metadata.Models

@{
    var name = (Model.PartFieldDefinition.PartDefinition.Name + "-" + Model.PartFieldDefinition.Name).HtmlClassify();
}

@if (Model.Value.HasValue)
{
    <div class="field field-type-datetimefield field-name-@name">
        <span class="name">@Model.PartFieldDefinition.DisplayName()@T[":"]</span>
        <span class="value">@Model.LocalDateTime</span>
    </div>
}
