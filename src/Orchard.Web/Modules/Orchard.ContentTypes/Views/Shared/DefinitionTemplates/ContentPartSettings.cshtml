@model Orchard.ContentManagement.Metadata.Settings.ContentPartSettings
<fieldset class="form-group">
    <label asp-for="Description">@T["Description"]</label>
    @Html.ValidationMessageFor(m => m.Description)
    <input asp-for="Description" class="form-control" />
    <span class="hint">@T["Optionally provide a description for this part"]</span>
</fieldset>
<fieldset class="form-group">
    <input asp-for="Attachable" class="form-control" />
    <label asp-for="Attachable">@T["Attachable"]</label>
    <span class="hint">@T["Check to allow this part to be attached to other content types."]</span>
</fieldset>