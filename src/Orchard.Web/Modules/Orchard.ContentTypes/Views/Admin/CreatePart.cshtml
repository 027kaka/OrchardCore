@model Orchard.ContentTypes.ViewModels.CreatePartViewModel

@RenderTitlePart(T["New Content Part"])

<form asp-action="CreatePart">
    @Html.ValidationSummary()
    <fieldset class="form-group">
        <label for="Name">@T["Name"]</label>
        <input asp-for="Name" class="form-control" />
        <span class="hint">@T["Use no spaces or special characters. For example, \"MyCustomPart\""]</span>
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-primary" type="submit">@T["Create"]</button>
    </fieldset>
</form>